<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/form-style.css">
    <title>Register</title>
</head>
    <body>
        <%- include("partials/header.ejs") %> 
        <div class="container">
            <form action="/users/register" enctype="multipart/form-data" method="POST">
    
              <div class="mb-3">  
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" id="email">
                <% if(locals.errors && locals.errors.email){ %>
                  <span> <%= errors.email.msg  %> </span>
                <% } %> 
              </div>
    
              <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" class="form-control" name="name" id="name">
                <% if(locals.errors && locals.errors.name){ %>
                  <span> <%= errors.name.msg  %> </span>
                <%} %> 
              </div>
    
              <div class="mb-3">
                <label for="last_name" class="form-label">Apellido</label>
                <input type="text" class="form-control" name="last_name" id="last_name">
                <% if(locals.errors && locals.errors.last_name){ %>
                  <span> <%= errors.last_name.msg  %> </span>
                <%} %> 
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password">
                <% if(locals.errors && locals.errors.password){ %>
                  <span> <%= errors.password.msg  %> </span>
                <% } %> 
              </div>

              <div class="mb-3">
                <select name="province">
                  <option disabled>-provincia-</option>
                  <% provinces.forEach(function(province) { %>
                    <option value="<%= province.id %>"> <%= province.name %></option>
                  <% }) %> 
                </select>
              </div>
               
              <div class="mb-3">
                <label for="avatar" class="form-label"> Avatar</label>
                <input type="file" class="form-control" id="avatar" name="avatar">
              </div>
    
              <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                  Registrate
                </button>
              </div>
            </form>
    
        </div>
    </body>
</html>